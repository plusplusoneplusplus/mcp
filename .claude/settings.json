{
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(**)",
      "Write(**)",
      "Bash(*)",
      "WebFetch(*)",
      "Git(*)",
      "MultiEdit(**)",
      "Agent(*)",
      "Glob(*)",
      "Grep(*)",
      "LS(*)",
      "NotebookEdit(**)",
      "NotebookRead(**)",
      "TodoRead(*)",
      "TodoWrite(*)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(.env)",
      "Edit(**/.env)",
      "Edit(.env)",
      "Bash(rm -rf:*)",
      "Bash(sudo rm:*)",
      "Bash(format:*)",
      "Bash(mkfs:*)",
      "Bash(dd:*)"
    ],
    "defaultMode": "allowEdits"
  }
}
