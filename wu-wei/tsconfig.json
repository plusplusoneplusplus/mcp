{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2020",
        "outDir": "out",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "jsxFactory": "vscpp",
        "jsxFragmentFactory": "vscppf",
        "types": [
            "mocha",
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "test"
    ]
}